<div class="container">
    <h1 class="display-3">Change Email</h1>
    <form method="post" action="/account/change-email">
        <div class="form-group">
            <div>Your exist email: <strong>{{ person.email }}</strong></div>
            <div>change email will send activate link to your new email address.</div>
        </div>

        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <input class="form-control" name="email" type="email" placeholder="New Email" required/>
                    <small class="form-text text-muted">After change email, your account will be pending until email address is verified.</small>
                </div>
                <div class="col">
                    <input class="form-control" name="password" type="password" placeholder="Enter your password" required/>
                </div>
            </div>
        </div>

        <div class="form-group text-right">
            <a href="/account" class="btn btn-link">Back to Merchant dashboard</a>
            <button type="submit" class="btn btn-primary" >Change email</button>
        </div>
        <div class="form-text text-muted"></div>
    </form>
</div>